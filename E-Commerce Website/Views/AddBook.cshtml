@model BookDto
@{
    ViewData["Title"] = "Add Books";
    var authors = ViewBag.Authors as SelectList ?? new SelectList(Enumerable.Empty<SelectListItem>());
    var categories = ViewBag.Categories as SelectList ?? new SelectList(Enumerable.Empty<SelectListItem>());
}

<div class="content">
    <div class="row">
        <div class="col-xl-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Manage Books</h5>
                    <form method="get" class="d-flex align-items-center">
                        <div class="input-group">
                            <span class="input-group-text bg-white border-end-0">
                                <i class="ph-magnifying-glass"></i>
                            </span>
                            <input type="text" class="form-control border-start-0" name="search" placeholder="Search by title..." />
                        </div>
                        <button type="submit" class="btn btn-outline-primary ms-2">Search</button>
                    </form>
                </div>

                <div class="card-body">
                    <form method="post" action="@Url.Action("CreateBook", "Admin")" enctype="multipart/form-data">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label for="Title" class="form-label">Title</label>
                                <input type="text" class="form-control" id="Title" name="Title" required placeholder="Title"  />
                            </div>

                            <div class="col-md-6">
                                <label for="Price" class="form-label"><h6>Price</h6> </label>
                                <input type="number" step="0.01" class="form-control" id="Price" name="Price" required placeholder="Price"  />
                            </div>

                            <div class="col-md-6">
                                <label for="Stock" class="form-label"><h6>Stock</h6></label>
                                <input type="number" class="form-control" id="Stock" name="Stock" required placeholder="Stock"/>
                            </div>

                            <div class="col-md-6">
                                <label for="AuthorId" class="form-label"><h6>Author</h6></label>
                                <input type="text" name="AuthorName" placeholder="Author Name" class="form-select" />
                            </div>

                            <div class="col-md-6">
                                <div class="content-group-lg">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="icon-calendar5"></i></span>
                                        <input type="text" class="form-control pickadate">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label for="ImageUrl" class="form-label"><h6>Book Image</h6></label>
                                <input type="file" name="ImageUrl" class="form-control" />
                            </div>
                            

                            <div class="col-12">
                                <label for="Description" class="form-label"><h6>Description</h6></label>
                                <textarea id="Description" name="Description" class="form-control" rows="3"></textarea>
                            </div>

                            <div class="col-12 d-flex justify-content-end mt-3">
                                <button type="submit" class="btn btn-success me-2"><h6>Add Book</h6></button>
                                <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Cancel</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
